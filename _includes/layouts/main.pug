<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/style-v6.css")

    if title
      title= title
    else
      title Sketchnotes in der IT
    
    //- primary meta tags
    if title
      meta(name="title",content=title)
    else
      meta(name="title",content="Sketchnotes in der IT")
    if description
      meta(name="description",content=description)
    else
      meta(name="description",content="Eine Seite über Sketchnotes in der IT")
    
    //- Open Graph / Facebook
    meta(property="og:type",content="website")
    meta(property="og:url",content="https://www.sketchnotes.tech" + page.url)
    if title
      meta(property="og:title",content=title)
    else
      meta(property="og:title",content="Sketchnotes in der IT")
    if description
      meta(property="og:description",content=description)
    else
      meta(property="og:description",content="Eine Seite über Sketchnotes in der IT")
    if imageUrl
      meta(property="og:image",content="https://www.sketchnotes.tech" + imageUrl)
    else
      meta(property="og:image",content="https://www.sketchnotes.tech/img/logo.png")
    
    //- Twitter
    meta(property="twitter:card",content="summary_large_image")
    meta(property="twitter:url",content="https://www.sketchnotes.tech" + page.url)
    meta(property="twitter:creator",content="@teapot4181")
    if title
      meta(property="twitter:title",content=title)
    else
      meta(property="twitter:title",content="Sketchnotes in der IT")
    if description
      meta(property="twitter:description",content=description)
    else
      meta(property="twitter:description",content="Eine Seite über Sketchnotes in der IT")
    if imageUrl
      meta(property="twitter:image",content="https://www.sketchnotes.tech" + imageUrl)
    else
      meta(property="twitter:image",content="https://www.sketchnotes.tech/img/logo.png")

  body.layout
    header.navigation-bar
      nav.navbar.navbar
        a.navbar__item--image(href="/")
          img(src="/img/teapot.PNG")
        a.navbar__item(href="/blog") Blog
        a.navbar__item(href="/sketchnotes") Sketchnotes
        a.navbar__item(href="/inktechtober2020") inktechtober 2020
        a.navbar__item(href="/about") Über mich
    
    div.content
      block content

    footer
      nav.navbar.navbar--footer
        div.footer__left
          a.navbar__item(href="/impressum") Impressum
          a.navbar__item(href="/about_this_page") Über diese Seite
        div.footer__right
          a.navbar__item--image(href="https://twitter.com/teapot4181",title="Twitter")
            img.footer__icon(src="/img/twitter.svg")
          a.navbar__item--image(href="https://www.instagram.com/418_teapot",title="Instagram")
            img.footer__icon(src="/img/instagram.svg")
          a.navbar__item--image(href="https://www.youtube.com/channel/UCuZs1YPHHn8PpSiZsPKbtLA",title="Youtube")
            img.footer__icon(src="/img/youtube.svg")
          a.navbar__item--image(href="/feed.xml",title="RSS")
            img.footer__icon(src="/img/rss.svg")
